<Window x:Class="projectx1.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectx1"
        mc:Ignorable="d"
                    Title="Панель администратора" MinHeight="500" MinWidth="800" SizeToContent="WidthAndHeight" ResizeMode="CanResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF21" Offset="0.0"/>
            <GradientStop Color="#FF21FF21" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20">
        <DataGrid x:Name="Users"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="False"
              Margin="10,10,10,10"
              SelectionMode="Single" SelectionChanged="Users_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding lastname}" Width="160"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding firstname}" Width="160"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding role}" Width="160"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding username}" Width="160"/>
                <DataGridTextColumn Header="Заблокирован" Binding="{Binding IsLocked}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Content="Добавить пользователя"
                Width="160"
                Height="30"
                Background="Azure"
                Foreground="#444"
                FontWeight="Bold" Click="AddUser_Click"/>
            <Button Content="Разблокировать"
                Width="160"
                Height="30"
                Background="Azure"
                Foreground="#444"
                FontWeight="Bold"
                Margin="5" Click="UnlockUser_Click"/>
            <Button Content="Сохранить изменения"
                Width="160"
                Height="30"
                Background="Azure"
                Foreground="#444"
                FontWeight="Bold"
                Margin="5" Click="Save_Click"/>

        </StackPanel>

    </Grid>
</Window>
