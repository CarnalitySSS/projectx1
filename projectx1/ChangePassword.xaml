<Window x:Class="projectx1.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Изменение пароля" 
        Height="400" 
        Width="300"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF21FF21" Offset="0.0"/>
            <GradientStop Color="#FF2133FF" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <StackPanel Margin="20">
        <TextBlock Text="Смена пароля" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Текущий пароль:" Margin="0,10,0,5"/>
        <PasswordBox x:Name="txtCurrentPassword" Margin="0,0,0,10"/>

        <TextBlock Text="Новый пароль:" Margin="0,10,0,5"/>
        <PasswordBox x:Name="txtNewPassword" Margin="0,0,0,10"/>

        <TextBlock Text="Подтвердите новый пароль:" Margin="0,10,0,5"/>
        <PasswordBox x:Name="txtConfirmNewPassword" Margin="0,0,0,20"/>

        <Button x:Name="btnChangePassword" 
                Content="Изменить пароль" 
                Click="Button_Click"
                Background="#4CAF50" 
                Foreground="White" 
                FontWeight="Bold" 
                Height="30"
                Cursor="Hand"/>
    </StackPanel>
</Window>